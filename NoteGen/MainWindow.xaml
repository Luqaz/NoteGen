<Window x:Class="NoteGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteGen"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Menu x:Name="menu" Height="22" VerticalAlignment="Top">
            <MenuItem Header="File" Height="21">
                <MenuItem Header="Open" HorizontalAlignment="Left" Width="136" Height="21" Click="FileOpenHandler"/>
            </MenuItem>
        </Menu>
        <Button x:Name="playButton" Content="Play" HorizontalAlignment="Right" Margin="0,33,451,0" VerticalAlignment="Top" Width="41" Click="playButton_Click"/>
        <Label x:Name="fileInfo" Content="" Margin="0,27,78,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="340"/>

    </Grid>
</Window>
